<fieldset data-hook="global_collect">
  <legend align="center">Global Collect</legend>

  <div class="row">
    <div class="alpha six columns">
      <dl>
        <dt>Order ID:</dt>
        <dd><%= payment.source.order_number %></dd>

        <dt><%= Spree.t('global_collect.payment_product') %>:</dt>
        <dd><%= payment.payment_method.payment_product_from_id(payment.source.payment_product_id) %></dd>
      </dl>
    </div>
  </div>

  <%= link_to Spree.t('global_collect.link'),
              global_collect_payment_url(payment),
              class: 'button', target: '_blank' %>
</fieldset>
